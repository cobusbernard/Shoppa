<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabHost" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TabLinearLayout" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="TabListView" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13dp</item>
    </style>
    
    <style name="ItemTextRow" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ItemCheckboxRow" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_weight">0</item>
    </style>    
    
	<style name="ItemRightPadRow" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">0</item>
    </style>       
    
	<style name="ButtonAddItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25dp</item>
    </style>       
    
</resources>